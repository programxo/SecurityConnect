@inherits LayoutComponentBase

@inject NavigationManager navigationManager

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudPaper Elevation="25">

    <MudToolBar Class="row font-weight-bold justify-content-md-center col-sm-6 col-md-4 col-lg-3"
                Style="@($"background:{Colors.Grey.Lighten1};")">
        

        <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" Size="Size.Large" />

        <MudIconButton Icon="@Icons.Material.Outlined.Add" Size="Size.Medium" />

        <MudSpacer />

        <MudIconButton Icon="@Icons.Material.Outlined.Notifications" Size="Size.Medium" />

        <MudIconButton Icon="@Icons.Material.Outlined.PushPin" Size="Size.Medium" />

        <MudIconButton Icon="@Icons.Material.Rounded.ManageAccounts" OnClick="@NavigateToUserManagement" Size="Size.Large" />

    </MudToolBar>

</MudPaper>

@Body

@code{
    void NavigateToUserManagement()
    {
        navigationManager.NavigateTo("/user-management", true);
    }
}

